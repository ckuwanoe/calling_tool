<html>
  <head>
    <title><%= h(yield(:title) || "Make Calls for Rory") %></title>
    <%= stylesheet_link_tag 'calltool' %>
    <%= javascript_include_tag :defaults, :cache => true %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/jquery-css/overcast/jquery-ui-1.8.custom.css"/>
     <script type="text/javascript">
